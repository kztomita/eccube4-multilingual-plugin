{% extends '@MultiLingual/default/default_frame.twig' %}

{% block main %}

<div class="ec-role">
    <div class="ec-pageHeader">
        <h1>{{ 'front.about.title'|trans }}</h1>
    </div>
    <div class="ec-off1Grid">
        <div class="ec-off1Grid__cell">
            <div class="ec-borderedDefs">
                {% if locale_text('baseinfo_shop_name')|default is not empty %}
                    <dl id="help_about_box__shop_name">
                        <dt>
                            <label class="ec-label">{{ 'common.shop_name'|trans }}</label>
                        </dt>
                        <dd>{{ locale_text('baseinfo_shop_name') }}</dd>
                    </dl>
                {% endif %}
                {% if locale_text('baseinfo_company_name')|default is not empty %}
                    <dl id="help_about_box__company_name">
                        <dt>
                            <label class="ec-label">{{ 'common.company_name'|trans }}</label>
                        </dt>
                        <dd>{{ locale_text('baseinfo_company_name') }}</dd>
                    </dl>
                {% endif %}

                {% if locale_text('baseinfo_postal_code')|default is not empty %}
                    <dl id="help_about_box__address">
                        <dt>
                            <label class="ec-label">{{ 'common.address'|trans }}</label>
                        </dt>
                        <dd>{{ 'common.postal_symbol'|trans }}{{ locale_text('baseinfo_postal_code') }}<br />
                            {{ locale_text('baseinfo_pref') }}{{ locale_text('baseinfo_addr01') }}{{ locale_text('baseifo_addr02') }}
                        </dd>
                    </dl>
                {% endif %}

                {% if locale_text('baseinfo_phone_number')|default is not empty %}
                    <dl id="help_about_box__phone_number">
                        <dt>
                            <label class="ec-label">{{ 'common.phone_number'|trans }}</label>
                        </dt>
                        <dd>{{ locale_text('baseinfo_phone_number') }}</dd>
                    </dl>
                {% endif %}

                {% if locale_text('baseinfo_business_hour')|default is not empty %}
                    <dl id="help_about_box__business_hour">
                        <dt>
                            <label class="ec-label">{{ 'front.about.business_hour'|trans }}</label>
                        </dt>
                        <dd>{{ locale_text('baseinfo_business_hour') }}</dd>
                    </dl>
                {% endif %}

                {% if locale_text('baseinfo_good_traded')|default is not empty %}
                    <dl id="help_about_box__good_traded">
                        <dt>
                            <label class="ec-label">{{ 'front.about.good_traded:'|trans }}</label>
                        </dt>
                        <dd>{{ locale_text('baseinfo_good_traded')|nl2br }}</dd>
                    </dl>
                {% endif %}

                {% if locale_text('baseinfo_message')|default is not empty %}
                    <dl id="help_about_box__message">
                        <dt>
                            <label class="ec-label">{{ 'front.about.message'|trans }}</label>
                        </dt>
                        <dd>{{ locale_text('baseinfo_message')|nl2br }}</dd>
                    </dl>
                {% endif %}
            </div>

        </div>
    </div>
</div>

{% endblock %}
